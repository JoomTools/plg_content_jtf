<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>JTF_XML_NAME</name>
	<creationDate>2018-04-23</creationDate>
	<author>Guido De Gobbis</author>
	<authorEmail>support@joomtools.de</authorEmail>
	<authorUrl>www.joomtools.de</authorUrl>
	<copyright>Copyright (C) 2018 JoomTools.de. All rights reserved.</copyright>
	<license>GPL v3</license>
	<version>2.5.28-EOL</version>
	<description>JTF_XML_DESC</description>

	<files>
		<folder>assets</folder>
<folder>layouts</folder>
<folder>tmpl</folder>
<folder>libraries</folder>
<file>script.php</file>
<file plugin="jtf">jtf.php</file>
<file>jtf.xml</file>
	</files>

	<languages folder="language">
		<language tag="de-DE">de-DE/de-DE.plg_content_jtf.ini</language>
<language tag="de-DE">de-DE/de-DE.plg_content_jtf.sys.ini</language>
<language tag="en-GB">en-GB/en-GB.plg_content_jtf.ini</language>
<language tag="en-GB">en-GB/en-GB.plg_content_jtf.sys.ini</language>
	</languages>

	<scriptfile>script.php</scriptfile>

	<config>
		<fields name="params">
			<fieldset name="basic">

				<field name="captcha"
				       type="list"
				       class="chzn-color-state"
				       default="custom"
				       label="JTF_XML_CAPTCHA_LABEL"
				       description="JTF_XML_CAPTCHA_DESC"
				>
					<option value="0">JOPTION_DO_NOT_USE</option>
					<option value="joomla">JTF_XML_CAPTCHA_VALUE_JOOMLA</option>
				</field>

				<field name="filloutTime"
				       type="integer"
				       default="10"
				       first="10"
				       last="40"
				       step="2"
				       label="JTF_XML_FILLOUT_LABEL"
				       description="JTF_XML_FILLOUT_DESC"
				/>

				<field name="file_path"
				       type="text"
				       default="uploads"
				       label="JTF_XML_FILE_PATH_LABEL"
				       description="JTF_XML_FILE_PATH_DESC"
				/>

				<field name="file_clear"
				       type="integer"
				       default="30"
				       first="0"
				       last="365"
				       step="5"
				       label="JTF_XML_FILE_CLEAR_LABEL"
				       description="JTF_XML_FILE_CLEAR_DESC"
				/>

				<field addfieldpath="/plugins/content/jtf/libraries/joomla25eol/form/fields"
				       name="framework"
				       type="frwk"
				       default="0"
				       label="JTF_XML_FRAMEWORK_LABEL"
				       description="JTF_XML_FRAMEWORK_DESC"
				/>

			</fieldset>
		</fields>
	</config>
</extension>
