<?xml version="1.0" encoding="UTF-8"?>
<form orientation="stacked"
      class="span4"
>

	<field name="subform_text"
	       type="text"
	       class="span12"
	       description="JTF_TXT_DESC"
	       label="JTF_TXT_LABEL"
	       maxlength="60"
	       required="true"
	/>

	<field name="subform_cal"
	       type="calendar"
	       class="span12"
	       description="JTF_CAL_DESC"
	       label="JTF_CAL_LABEL"
	       size="8"
	       format="%d.%m.%Y"
	       filter="user_utc"
	       required="true"
	       showtime="false"
	       todaybutton="false"
	       translateformat="true"
	/>

	<field name="subform_checkbox_inline"
	       type="checkboxes"
	       class="span12"
	       description="JTF_CHK_INLINE_DESC"
	       label="JTF_CHK_INLINE_LABEL"
	       validate="options"
	       optionlabelclass="inline"
	       required="true"
	>
		<option value="JTF_OPTION1">JTF_OPTION1</option>
		<option value="JTF_OPTION2">JTF_OPTION2</option>
		<option value="JTF_OPTION3">JTF_OPTION3</option>
	</field>

	<field name="subform_file"
	       type="file"
	       description="JTF_FILE_DESC"
	       label="JTF_FILE_LABEL"
	       control="simple"
	       validate="file"
	       accept=".zip,.pdf,image/*"
	       multiple="multiple"
	       uploadmaxsize="1"
	/>

</form>